<mujoco model="cage_environment">
    <asset>
        <!-- Cage mesh - 2x bigger -->
        <mesh name="cage_mesh" file="../environments/Cage_360.obj" scale="2 2 2"/>
        
        <!-- Load texture manually if MTL isn't working -->
        <texture name="cage_texture" type="2d" file="../environments/Cage_360.png"/>
        <material name="cage_material" texture="cage_texture" rgba="1 1 1 1" shininess="0.3" specular="0.5"/>
    </asset>
    
    <worldbody>
        <!-- Cage as static body (no dynamics) -->
        <!-- Centered at origin with robot - Flip cage upside down: euler="90 0 0" (rotate 90Â° around X-axis) -->
        <body name="cage" pos="1 0 0" euler="1.5707 0 0">
            <!-- Explicit minimal inertial properties for static body -->
            <inertial pos="0 0 0" mass="0.001" diaginertia="0.001 0.001 0.001"/>
            
            <!-- Visual geometry (what you see) - Less transparent -->
            <geom name="cage_visual" 
                  type="mesh" 
                  mesh="cage_mesh" 
                  material="cage_material"
                  contype="0" 
                  conaffinity="0"
                  rgba="1 1 1 0.9"/>  <!-- Changed from 0.5 to 0.9 = much less transparent -->
            
            <!-- Collision geometry (for physics) - DISABLED at startup to avoid penetration -->
            <geom name="cage_collision" 
                  type="mesh" 
                  mesh="cage_mesh" 
                  contype="0" 
                  conaffinity="0" 
                  group="3"
                  rgba="0.6 0.6 0.6 1"/>  <!-- Changed to 1 = fully opaque -->
        </body>
    </worldbody>
</mujoco>